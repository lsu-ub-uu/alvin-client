{% extends "django_oai_pmh/base.xml" %}
{% load oai_pmh %}
{% block content %}<ListSets>
    {% for set in sets|dictsort:"name"  %}
        <set>
            <setSpec>{{set.spec}}</setSpec>
            <setName>{{set.name}}</setName>
            {% if set.description %}
                <setDescription>{% autoescape off %}
		<oai_dc:dc xmlns:oai_dc="http://www.openarchives.org/OAI/2.0/oai_dc/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dc="http://purl.org/dc/elements/1.1/" xsi:schemaLocation="http://www.openarchives.org/OAI/2.0/oai_dc/ http://www.openarchives.org/OAI/2.0/oai_dc.xsd">
		    <dc:description>All records from {{set.description}}</dc:description>
		</oai_dc:dc>
		{% endautoescape %}
		</setDescription>
            {% endif %}
        </set>
    {% endfor %}
</ListSets>
{% endblock %}
